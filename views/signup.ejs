<%- include('partials/header') -%>


              <!-- Error messages -->

              <!-- <section class="flex align-items min-h-screen md:justify-center"> -->
                <section class="flex flex-col items-center min-h-screen md:justify-center">
                <!-- <section class="flex flex-col items-center mt-8"> -->

                  <div class="flex justify-center pt-10 pb-10 text-4xl">
  <h2>Create Account</h2>
</div>

                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>

              <!-- Username, email, and password entries -->
                <form action="/signup" method="POST" class="flex flex-col">
                    <!-- Username-->
                    <div class="mb-3"> 
                        <label for="userName" class="form-label text-lg">User Name</label>
                        <!-- <input type="text" class="form-control" id="userName" name="userName"> -->
                        <input type="text" placeholder="User Name" class="form-control input input bordered input-secondary w-full max-w-xs" id="userName" name="userName"/>

                      </div>

                    <!-- Email -->
                    <div class="mb-3"> 
                      <label for="exampleInputEmail1" class="form-label text-lg">Email Address</label>
                      <input type="email" placeholder="Email" class="form-control input input bordered input-secondary w-full max-w-xs" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <!-- <div id="emailHelp" class="form-text text-red">We'll never share your email with anyone else.</div> -->
                    </div>
                    <!-- Password -->
                    <div class="mb-3">
                      <label for="password" class="form-label text-lg">Password</label>
                      <input type="password" class="form-control input bordered input-secondary w-full max-w-xs" id="password" name="password">
                    </div>
                    <!-- Confirm Password-->
                    <div class="mb-5"> 
                        <label for="confirmPassword" class="form-label text-lg">Confirm Password</label>
                        <input type="password" class="form-control input bordered input-secondary w-full max-w-xs" id="confirmPassword" name="confirmPassword">
                      </div>

              <!-- Submit button-->
              <div class="flex justify-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                  </form>
                  </div>
            </section>

            

<%- include('partials/footer') -%>