<%- include('partials/header') -%>

<div class="min-h-screen">
<div class="flex justify-center pt-20 text-4xl">
  <h2>Login</h2>
</div>

<main class="flex flex-col items-center mt-8">

  <div class="flex justify-center flex-col mb-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger mb-2"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
  </div>

      <!-- Email -->
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label text-lg"
            >Email address</label> 
         
          <input 
          type="email" 
          placeholder="Email" 
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          name="email"
          class="form-control input input-bordered input-secondary w-full max-w-xs" />
        </div>

        <!--Password -->

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label text-lg">Password</label>
          <input
            type="password"
            placeholder="Password"
            class="form-control input input-bordered input-secondary w-full max-w-xs"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="flex justify-center mt-10">        
          <button type="submit" class="btn btn-primary mb-18">Submit</button>
        </div>
      </form>
</main>
</div>

<%- include('partials/footer') -%>
