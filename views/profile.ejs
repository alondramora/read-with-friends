<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read with Friends</title>
    <link rel="stylesheet" type="text/css" href="css/main.css" />
  </head>

<div class="flex justify-center mt-7 md:justify-start">
  <p class="text-2xl">Hello <strong><%= user.userName %></strong>,</p>
</div>


<div class="flex flex-col justify-start mt-7">
  <h3 class="text-2xl pl-8 mb-5">Add a book:</h3>
    <div>
      <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label pl-10">Title</label>
                  <input type="text" class="form-control border-2 border-black-500" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label pl-10">Caption</label>
                <textarea class="form-control border-2 border-black-500" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label pl-10">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
            </form>
    </div>
</div>
<div class="flex justify-center">
   <button type="submit" class="mt-10 btn btn-primary block p-3 px-6 pt-2 text-white bg-kindaOrange rounded-full baseline hover:bg-black justify-center" value="Upload">Submit</button>

</div>


<!-- Here is where the OG code begins-->
<div class="flex justify-center">
  <div class="row mt-5">
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid w-40" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>

        <div class="row justify-content-center mt-10">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
          <a href="/logout" class=""> Logout</a>
        </div>  
      </div>  
  </div>
</div>



<%- include('partials/footer') -%>